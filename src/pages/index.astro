---
import { SITE } from "~/config.mjs";
import Layout from "~/layouts/PageLayout.astro";
import Hero from "~/components/widgets/Hero.astro";
import Note from "~/components/widgets/Note.astro";
import Features from "~/components/widgets/Features.astro";
import Features2 from "~/components/widgets/Features2.astro";
import Steps from "~/components/widgets/Steps.astro";
import Content from "~/components/widgets/Content.astro";
import LatestPosts from "~/components/blog/LatestPosts.astro";
import FAQs from "~/components/widgets/FAQs.astro";
import Stats from "~/components/widgets/Stats.astro";
import CallToAction from "~/components/widgets/CallToAction.astro";
import i18next, { t, changeLanguage } from "i18next";
import { Trans, HeadHrefLangs } from "astro-i18next/components";

changeLanguage("en");

const meta = {
    title: SITE.title,
    description: SITE.description,
    dontUseTitleTemplate: true,
};
---

<Layout {meta}>
  <Features
    highlight="Produkti in storitve"
    title="Ponudba rešitev in storitev"
    subtitle="Kuem združuje izkušene strokovnjake z dolgoletnimi izkušnjami in sodelovanju na najrazličnejših kompleksnih programskih rešitvah."
    items={[
      [
        {
          title: 'KuIoT',
          description:
            'Moderna splošnonamenska IoT platforma namenjena nadzoru pametnih naprav preko različnih omrežnih tehnologij (LoRa, NB-IoT,...).',
          icon: 'tabler:brand-tailwind'
        },
        {
          title: 'Svetovanje in arhitektura',
          description:
            'Dobro zasnovana programska rešitev pomeni manj težav s skalabilnostjo v prihodnosti.',
          icon: 'tabler:components',
        }
      ],
      [
        {
          title: 'Razvoj programske opreme in integracij na ključ',
          description:
            'Največje optimizacije pri digitalizaciji poslovnih procesov in izmenjavah podatkov se dosega z namensko napisano programsko opremo.',
          icon: 'tabler:rocket',
        },
        {
          title: 'DevOps & Platform Engineering',
          description:
            'Pomagamo vam vzpostaviti celotno razvojno okolje.',
          icon: 'tabler:arrows-right-left',
        }
      ],
    ]}
  />

</Layout>
