---
const logos = [
  {
    image: "/logos/github.svg",
  },
  {
    image: "/logos/contentfull.svg",
  },
  {
    image: "/logos/github.svg",
  },
  {
    image: "/logos/spotify.svg",
  },
  {
    image: "/logos/spacex.svg",
  },
  {
    image: "/logos/zoom.svg",
  },

];
---

<section
  class="flex items-end justify-center bg-vulcan-900 border-y border-white/5"
>
  <div
    class="justify-center px-8 py-12 mx-auto max-w-7xl md:px-12 lg:px-24 lg:py-24"
  >
    <div class="grid items-center grid-cols-1 md:grid-cols-2 lg:grid-cols-4">
      <div
        class="max-w-xl mx-auto col-span-full lg:max-w-none lg:mr-auto lg:col-span-1"
      >
        <span
          class="justify-center w-auto px-4 py-2 text-center rounded-full bg-vulcan-800"
        >
          <span class="text-sm text-indigo-300"> Our beloved customers</span>
        </span>
      </div>
      <div class="mt-12 space-y-12 md:col-span-3 lg:mt-0">
        <div class="grid grid-cols-2 sm:grid-cols-4 gap-0.5 gap-y-16 md:grid-cols-3">
          {
            logos.map((logos) => (
              <div class="flex col-span-1 px-4 sm:px-8">
                <img class="max-h-12" src={logos.image} alt=" logo" />
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
