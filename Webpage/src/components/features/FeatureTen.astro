---
import Verticalgrid from "../assets/Verticalgrid.astro";
const features = [
  { title: "Access real-time financing", description: "anytime" },
  { title: "Bank-level security", description: "24/7" },
  { title: "Built to scale", description: "your company" },
  { title: "User-friendly", description: "anytime" },
  { title: "Customizable", description: "24/7" },
  { title: "Scheduled Orders", description: "your company" },
  { title: "Allergen Filtering", description: "anytime" },
  { title: "Multilingual Support", description: "absolutely" },
  { title: "Multiple Languages", description: "expand your reach" },
  { title: "User-focused Design", description: "seamless UX" },
  {title: "Automated Tracking", description: "tidy orders ",},
  { title: "Premium Branding", description: "stand out" },
  { title: "Easily Translated", description: "for global accessibility" },
  { title: "Accounts Management", description: "24/7 access" },
  { title: "Automated Orders", description: "streamlined" },
];

---

<section class="relative">
  <Verticalgrid />
  <div class="relative px-8 py-12 mx-auto max-w-7xl md:px-12 lg:px-32 lg:py-24">
    <div class="max-w-2xl mx-auto lg:text-center">
      <div>
        <p
          class="text-sm text-transparent uppercase bg-gradient-to-r from-indigo-300 to-indigo-400 bg-clip-text"
        >
          Robust security measures
        </p>
        <p class="mt-8 text-3xl font-normal tracking-tight text-white">
          We employ state-of-the-art security measures to safeguard your
          sensitive information
        </p>
      </div>
      <ul
        class="grid grid-cols-1 gap-6 mt-12 lg:text-center sm:grid-cols-3 lg:gap-12"
        role="list"
      >
        <li
          x-data="{ count: 0, target: 20, counter() { let interval = setInterval(() => { if (this.count < this.target) { this.count += 1; } else { clearInterval(interval); } }, 50); } }"
          x-intersect.once="counter()"
        >
          <div>
            <p
              class="text-2xl font-medium text-transparent bg-clip-text bg-gradient-to-r from-indigo-300 via-indigo-400 to-indigo-500 lg:text-4xl"
              x-text="`${count}%`"
            >
            </p>
          </div>
          <div class="mt-2 text-base text-vulcan-300">Faster turnarounds</div>
        </li>
        <li
          x-data="{ count: 0, target: 34, counter() { let interval = setInterval(() => { if (this.count < this.target) { this.count += 1; } else { clearInterval(interval); } }, 50); } }"
          x-intersect.once="counter()"
        >
          <div>
            <p
              class="text-2xl font-medium text-transparent bg-clip-text bg-gradient-to-r from-indigo-300 via-indigo-400 to-indigo-500 lg:text-4xl"
              x-text="`${count}%`"
            >
            </p>
          </div>
          <div class="mt-2 text-base text-vulcan-300">
            Fewer revisions to make
          </div>
        </li>
        <li
          x-data="{ count: 0, target: 40, counter() { let interval = setInterval(() => { if (this.count < this.target) { this.count += 1; } else { clearInterval(interval); } }, 50); } }"
          x-intersect.once="counter()"
        >
          <div>
            <p
              class="text-2xl font-medium text-transparent bg-clip-text bg-gradient-to-r from-indigo-300 via-indigo-400 to-indigo-500 lg:text-4xl"
              x-text="`${count}%`"
            >
            </p>
          </div>
          <div class="mt-2 text-base text-vulcan-300">
            Fewer rounds of reviews
          </div>
        </li>
      </ul>
    </div>
    <div
      class="relative items-center w-full pb-0 mx-auto mt-12 overflow-hidden max-w-7xl lg:p-10 lg:pb-0 lg:rounded-5xl bg-vulcan-900 lg:border border-vulcan-800"
      style=""
    >
      <img
        class="object-cover w-full -mb-12 border shadow-2xl rounded-xl border-white/5 lg:rounded-3xl shadow-vulcan-950"
        src="/assets/dashboard.svg"
        alt=""
      />
    </div>
    <ul
      class="grid grid-cols-1 gap-y-1 gap-x-6 lg:gap-x-12 mt-12 list-none sm:grid-cols-2 lg:grid-cols-3 lg:mt-24"
      role="list"
    >
      {
        features.map((feature) => (
          <li

          key={feature.title} class="flex items-center py-2 ">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-4 h-4 text-indigo-400 icon icon-tabler icon-tabler-circle-check"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path stroke="none" d="M0 0h24v24H0z" fill="none" />
              <circle cx="12" cy="12" r="9" />
              <path d="M9 12l2 2l4 -4" />
            </svg>
            <p class="ml-2 text-sm leading-6 text-vulcan-300">
              <strong class="font-semibold text-vulcan-100">
                {feature.title}
              </strong>{" "}
              â€” {feature.description}
            </p>
          </li>
        ))
      }
    </ul>
  </div>
</section>
