---
import Verticalgrid from "../assets/Verticalgrid.astro";
import Blurgradientleft from "../assets/Blurgradientleft.astro";
---

<section class="relative">
  <Verticalgrid />
  <Blurgradientleft />
  <div
    class="relative items-center w-full px-5 pt-24 mx-auto md:px-12 lg:px-12 max-w-7xl lg:pt-36"
  >
    <div
      class="grid grid-cols-1 gap-6 p-8 pb-0 overflow-hidden lg:grid-cols-2 lg:gap-24 lg:p-20 lg:pb-0"
    >
      <div
        class="relative items-center gap-12 pb-12 m-auto lg:inline-flex md:order-first lg:pb-32 xl:pt-20"
      >
        <div class="max-w-xl text-center lg:text-left">
          <p
            class="text-sm text-transparent uppercase bg-gradient-to-r from-indigo-300 to-indigo-400 bg-clip-text"
          >
            Navy
          </p>
          <p
            class="mt-8 text-4xl font-normal text-balance tracking-tight text-white sm:text-5xl"
          >
            NextGen Banking empowering your financial journey
          </p>
          <p class="max-w-2xl mt-4 text-vulcan-300">
            Transforming the banking experience for a digital future: Unleashing
            innovative technologies to empower customers and redefine financial
            services.
          </p>
          <div class="flex flex-wrap items-center gap-2 mt-10">
            <a
              href="https://lexingtonthemes.lemonsqueezy.com/checkout/buy/cad98266-24b3-47fd-99a6-e65ad9af37f6"
              title="link to  page"
              aria-label="your label"
              class="flex items-center justify-center h-10 px-4 py-2 text-sm font-semibold text-white transition-all rounded-lg hover:to-indigo-600 bg-gradient-to-b from-indigo-300 via-indigo-400 to-indigo-500"
              >Buy Navy</a
            >
            <a
              href="/system/overview"
              title="link to  page"
              aria-label="your label"
              class="flex items-center justify-center h-10 px-4 py-2 text-sm font-semibold text-white transition-all border rounded-lg bg-vulcan-900 hover:text-indigo-400 border-vulcan-700"
              >See all pages</a
            >
          </div>
        </div>
      </div>
      <div class="relative order-first hidden w-full lg:block overflow-hidden">
        <img
          class="object-cover object-center w-full mx-auto shadow-2xl lg:absolute lg:ml-auto shadow-black"
          alt="hero"
          src="/assets/card3.svg"
        />
      </div>
    </div>
  </div>
</section>
