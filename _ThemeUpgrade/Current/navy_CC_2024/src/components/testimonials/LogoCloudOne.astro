---
const logos = [
  {
    image: "/logos/basecamp.svg",
  },
  {
    image: "/logos/contentfull.svg",
  },
  {
    image: "/logos/notion.svg",
  },
  {
    image: "/logos/dribbble.svg",
  },
];
---
<section
  class="flex items-end justify-center bg-vulcan-900 border-y border-white/5">
  <div
    class="justify-center px-8 py-12 mx-auto max-w-7xl md:px-12 lg:px-24 lg:py-24">
    <div class="items-center">
      <div class="justify-center max-w-xl mx-auto text-center">
        <span class="justify-center w-auto text-center">
          <span
            class="text-sm tracking-wide text-transparent uppercase bg-gradient-to-r from-indigo-300 to-indigo-400 bg-clip-text">
            Navy powers and empowers the next generation
          </span>
        </span>
      </div>
      <div class="mt-12">
        <div class="grid grid-cols-2 gap-0.5 sm:grid-cols-3 lg:grid-cols-4">
          {
            logos.map((logos) => (
              <div class="flex px-8">
                <img class="max-h-12" src={logos.image} alt=" logo" />
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
